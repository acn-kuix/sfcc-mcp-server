    {
      "toolName": "search_products",
      "path": "/product_search",
      "description": "Search for products in the catalog using various filters. Supports filtering by name, price range, category, and other attributes. Returns product data including ID, name, price, and availability.",
      "method": "POST",
      "parameters": [
        {
          "name": "site_id",
          "description": "The site ID to search products in",
          "type": "string",
          "required": true
        },
        {
          "name": "query",
          "description": "Search query text to find products by name or description",
          "type": "string",
          "required": false
        },
        {
          "name": "count",
          "description": "Number of results to return (default: 25, max: 200)",
          "type": "number",
          "required": false
        },
        {
          "name": "start",
          "description": "Starting index for pagination (default: 0)",
          "type": "number",
          "required": false
        },
        {
          "name": "expand",
          "description": "Comma-separated list of fields to expand (e.g., 'prices,images,availability')",
          "type": "string",
          "required": false
        }
      ],
      "defaultBody": {
        "query": {
          "match_all_query": {}
        },
        "count": 25,
        "start": 0
      },
      "apiType": "ocapi",
      "requiresSiteId": true
    },
